<h1>Listing contas</h1>

<table>
  <tr>
    <th>Descricao</th>
    <th>Limite</th>
    <th>Inativo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contas.each do |conta| %>
  <tr>
    <td><%= conta.descricao %></td>
    <td><%= conta.limite %></td>
    <td><%= conta.inativo %></td>
    <td><%= link_to 'Show', conta %></td>
    <td><%= link_to 'Edit', edit_conta_path(conta) %></td>
    <td><%= link_to 'Destroy', conta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

