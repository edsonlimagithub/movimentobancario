<h1>Registros do arquivo sitef</h1>
<%= @sitefFile.dia_correspondente %>
<table id="tabela">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Valor</th>
        <th>Parcelas</th>
        <th>Pdv</th>
        <th>Nsu Host</th>
      </tr>
    </thead>
    <tbody>
        <% @registrosArquivoSitef.each do |r| %>
          <tr>
            <td><%= r[:nome_produto] %></td>
            <td><%= r[:valor] %></td>
            <td><%= r[:num_par] %></td>
            <td><%= r[:indentifi_pdv]%></td>
            <td><%= r[:nsu_sitef] %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<br />
<br />

<%= link_to 'Confirmar', '/importacao/processaRegistrosSitef' %>

<script type="text/javascript">
    $(document).ready(function(){
        $("#tabela").dataTable({});    
    });
    
</script>
