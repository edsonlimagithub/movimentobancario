<h1>Produtos</h1>
<%= link_to 'Novo Produto', new_produto_path %>

<table>
  <tr>
    <th>Descricao</th>
    <th>Taxa</th>
    <th>Descricao sitef</th>
    <th>Prazo</th>
    <th></th>
  </tr>

<% @produtos.each do |produto| %>
  <tr>
    <td><%= produto.descricao %></td>
    <td><%= produto.taxa %></td>
    <td><%= produto.descricao_sitef %></td>
    <td><%= produto.prazo.descricao %></td>
    <td>
      <%= link_to 'Show', produto %>
      <%= link_to 'Edit', edit_produto_path(produto) %>
      <%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Produto', new_produto_path %>
